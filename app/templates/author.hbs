<div class="panel-heading">
  <div class="search">
    <input value={{this.search}} {{action (mut this.search) on="input" value="target.value"}}>
    {{input type="text" placeholder="Search by Author Name" value=this.search}}
  </div>

  {{#link-to "author.create" class="btn-new"}}
    <div class="sr-only">Add New Author</div>
  {{/link-to}}
</div>

<div class="panel-content">
  <h3 class="panel-title">Authors</h3>

  <ul class="collection">
    {{#each this.model as |author|}}
      {{author-list-item first=author.first last=author.last authorId=author.id tagName="li"}}
    {{/each}}
  </ul>
</div>

<div class="slide-container">
  {{outlet}}
</div>
