<form {{action "submitChanges" on="submit"}}>
  <div class="field">
    <label>Title:</label>
    {{input type="text" placeholder="Title" value=this.title}}
  </div>

  <div class="field">
    <label>ISBN:</label>
    {{input type="text" placeholder="ISBN" value=this.isbn}}
  </div>

  <div class="field">
    <label>Publish Date:</label>
    {{input type="date" placeholder="Publish Date" value=this.publishDate}}
  </div>

  <div class="field">
    <label>Author:</label>
    <p class="control">
      <Ui-Select label="Select Author" @value={{this.author}} @options={{this.authors}} @onchange={{action "changeAuthor"}} as |authorOption|>
        {{authorOption.last}}, {{authorOption.first}}
      </Ui-Select>

    </p>
  </div>

  <div class="field">
    <label>Don't See Your Author?</label>
    {{new-author-modal onsave=(action (mut this.author))}}
  </div>

  <div class="form-footer">
    <button type="submit" class="btn-submit">save</button>
  </div>
</form>
