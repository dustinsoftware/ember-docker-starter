<button type="button" class="btn-trigger" {{action (mut this.showModal) true on="click"}}>Add a New Author</button>

{{#if this.showModal}}
  <div class="modal-if">
    <div class="modal">
      <form class="modal-card" {{action "save" on="submit"}}>
        <h3 class="modal-heading">Add New Author For Book</h3>

        <div class="modal-content">
          <div class="field">
            <label>First Name:</label>
            <input type="text" placeholder="First Name" value={{this.author.first}}>
          </div>
          <div class="field">
            <label>Last Name:</label>
            <input type="text" placeholder="Last Name" value={{this.author.last}}>
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn-clear" {{action (mut this.showModal) false on="click"}}>Cancel</button>
          <button type="submit" class="btn-submit">Submit</button>
        </div>
      </form>
    </div>
  </div>
{{/if}}
